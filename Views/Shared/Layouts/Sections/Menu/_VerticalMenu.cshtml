@{
  TempData.Keep();
  string? currentPage = Convert.ToString(ViewContext.RouteData.Values["Page"])!;
  var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
  var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div
    class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-controller="Home" asp-action="Index" class="app-brand-link">
      <span class="app-brand-logo demo">
        @await Html.PartialAsync("~/Views/Shared/_Partials/_Macros.cshtml")
      </span>
      <span class="app-brand-text demo menu-text fw-bold ms-2">@(TempData["appName"] ?? "نظام الاختبارات")</span>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i class="bx menu-toggle-icon d-none d-xl-block fs-4 align-middle"></i>
      <i class="bx bx-x d-block d-xl-none bx-sm align-middle"></i>
    </a>
  </div>

  @* ! Hide menu divider if navbar-full *@
  <div
    class='menu-divider mt-0 @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Starter Kit menu-items *@
  <ul class="menu-inner py-1">
    <!-- الصفحة الرئيسية -->
    <li class="menu-item @(currentController == "Home" ? "active" : "")">
      <a href="@Url.Action("Index", "Home")" class="menu-link">
        <i class="menu-icon tf-icons bx bx-home-circle"></i>
        <div>الصفحة الرئيسية</div>
      </a>
    </li>

    <!-- الامتحانات -->
    <li class="menu-item @(currentController == "Exams" ? "active open" : "")">
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-book-open"></i>
        <div>الامتحانات</div>
      </a>
      <ul class="menu-sub">
        <li class="menu-item @(currentController == "Exams" && currentAction == "Index" ? "active" : "")">
          <a href="@Url.Action("Index", "Exams")" class="menu-link">
            <div>قائمة الامتحانات</div>
          </a>
        </li>
        <li class="menu-item @(currentController == "Exams" && currentAction == "Create" ? "active" : "")">
          <a href="@Url.Action("Create", "Exams")" class="menu-link">
            <div>إنشاء امتحان جديد</div>
          </a>
        </li>
        <li class="menu-item @(currentController == "Exams" && currentAction == "Results" ? "active" : "")">
          <a href="@Url.Action("Results", "Exams")" class="menu-link">
            <div>نتائج الامتحانات</div>
          </a>
        </li>
      </ul>
    </li>

    <!-- مجموعات الأسئلة -->
    <li class="menu-item @(currentController == "QuestionSets" ? "active open" : "")">
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-collection"></i>
        <div>مجموعات الأسئلة</div>
      </a>
      <ul class="menu-sub">
        <li class="menu-item @(currentController == "QuestionSets" && currentAction == "Index" ? "active" : "")">
          <a href="@Url.Action("Index", "QuestionSets")" class="menu-link">
            <div>قائمة المجموعات</div>
          </a>
        </li>
        <li class="menu-item @(currentController == "QuestionSets" && currentAction == "Create" ? "active" : "")">
          <a href="@Url.Action("Create", "QuestionSets")" class="menu-link">
            <div>إنشاء مجموعة جديدة</div>
          </a>
        </li>
        <li class="menu-item @(currentController == "QuestionSets" && currentAction == "Library" ? "active" : "")">
          <a href="@Url.Action("Library", "QuestionSets")" class="menu-link">
            <div>مكتبة الأسئلة</div>
          </a>
        </li>
      </ul>
    </li>

    <!-- المتقدمين -->
    <li class="menu-item @(currentController == "Candidates" ? "active open" : "")">
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-user"></i>
        <div>المتقدمين</div>
      </a>
      <ul class="menu-sub">
        <li class="menu-item @(currentController == "Candidates" && currentAction == "Index" ? "active" : "")">
          <a href="@Url.Action("Index", "Candidates")" class="menu-link">
            <div>قائمة المتقدمين</div>
          </a>
        </li>
        <li class="menu-item @(currentController == "Candidates" && currentAction == "Create" ? "active" : "")">
          <a href="@Url.Action("Create", "Candidates")" class="menu-link">
            <div>إضافة متقدم جديد</div>
          </a>
        </li>
      </ul>
    </li>

    <!-- امتحانات المتقدمين -->
    <li class="menu-item @(currentController == "CandidateExams" ? "active open" : "")">
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-task"></i>
        <div>امتحانات المتقدمين</div>
      </a>
      <ul class="menu-sub">
        <li class="menu-item @(currentController == "CandidateExams" && currentAction == "Index" ? "active" : "")">
          <a href="@Url.Action("Index", "CandidateExams")" class="menu-link">
            <div>قائمة الامتحانات</div>
          </a>
        </li>
        <li class="menu-item @(currentController == "CandidateExams" && currentAction == "Results" ? "active" : "")">
          <a href="@Url.Action("Results", "CandidateExams")" class="menu-link">
            <div>النتائج</div>
          </a>
        </li>
      </ul>
    </li>

    <!-- الوظائف -->
    <li class="menu-item @(currentController == "Jobs" ? "active open" : "")">
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-briefcase"></i>
        <div>الوظائف</div>
      </a>
      <ul class="menu-sub">
        <li class="menu-item @(currentController == "Jobs" && currentAction == "Index" ? "active" : "")">
          <a href="@Url.Action("Index", "Jobs")" class="menu-link">
            <div>قائمة الوظائف</div>
          </a>
        </li>
        <li class="menu-item @(currentController == "Jobs" && currentAction == "Create" ? "active" : "")">
          <a href="@Url.Action("Create", "Jobs")" class="menu-link">
            <div>إضافة وظيفة جديدة</div>
          </a>
        </li>
      </ul>
    </li>

    <!-- إعدادات الحساب -->
    <li class="menu-item @(currentController == "Auth" ? "active open" : "")">
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-cog"></i>
        <div>إعدادات الحساب</div>
      </a>
      <ul class="menu-sub">
        <li class="menu-item @(currentController == "Auth" && currentAction == "Profile" ? "active" : "")">
          <a href="@Url.Action("Profile", "Auth")" class="menu-link">
            <div>الملف الشخصي</div>
          </a>
        </li>
        <li class="menu-item @(currentController == "Auth" && currentAction == "ChangePassword" ? "active" : "")">
          <a href="@Url.Action("ChangePassword", "Auth")" class="menu-link">
            <div>تغيير كلمة المرور</div>
          </a>
        </li>
      </ul>
    </li>
  </ul>

</aside>
<!-- / Menu -->
