
@model ExamResultDetailDto
@{
    ViewData["title"] = "تفاصيل نتيجة الاختبار";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">الاختبارات / @Model.ExamName /</span> تفاصيل نتيجة الاختبار
    </h4>

    <div class="row">
        <!-- معلومات المتقدم والنتيجة -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">معلومات المتقدم</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column gap-3">
                        <div class="mb-0">
                            <small class="text-muted mb-1 d-block">اسم المتقدم</small>
                            <h6>@Model.ApplicantName</h6>
                        </div>
                        <div class="mb-0">
                            <small class="text-muted mb-1 d-block">البريد الإلكتروني</small>
                            <h6>@Model.ApplicantEmail</h6>
                        </div>
                        <div class="mb-0">
                            <small class="text-muted mb-1 d-block">تاريخ البدء</small>
                            <h6>@Model.StartTime?.ToString("yyyy/MM/dd HH:mm:ss")</h6>
                        </div>
                        <div class="mb-0">
                            <small class="text-muted mb-1 d-block">تاريخ الإنتهاء</small>
                            <h6>@Model.EndTime?.ToString("yyyy/MM/dd HH:mm:ss")</h6>
                        </div>
                        <div class="mb-0">
                            <small class="text-muted mb-1 d-block">المدة المستغرقة</small>
                            @if (Model.StartTime.HasValue && Model.EndTime.HasValue)
                            {
                                var duration = Model.EndTime.Value - Model.StartTime.Value;
                                <h6>@($"{duration.Hours:D2}:{duration.Minutes:D2}:{duration.Seconds:D2}")</h6>
                            }
                            else
                            {
                                <h6>-</h6>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">ملخص النتيجة</h5>
                    <div>
                        <a href="@Url.Action("SendResultEmail", "Exams", new { id = Model.Id })"
                            class="btn btn-outline-primary">
                            <i class="bx bx-envelope me-1"></i>
                            إرسال النتيجة بالبريد
                        </a>
                        <a href="@Url.Action("Results", "Exams", new { id = Model.ExamId })"
                            class="btn btn-outline-secondary ms-2">
                            <i class="bx bx-arrow-back me-1"></i>
                            العودة إلى النتائج
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border shadow-none mb-3">
                                <div class="card-body text-center p-4">
                                    @{
                                        var scoreClass = Model.Score >= 70 ? "success" : (Model.Score >= 50 ? "warning" :
                                        "danger");
                                        var scoreText = Model.Score >= 70 ? "ناجح" : "غير ناجح";
                                    }
                                    <div class="avatar avatar-xl bg-label-@scoreClass mb-3">
                                        <span class="avatar-initial rounded-circle">@Model.Score%</span>
                                    </div>
                                    <h5 class="mb-1">@scoreText</h5>
                                    <span>الدرجة النهائية</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border shadow-none mb-3">
                                <div class="card-body p-4">
                                    <div class="mb-3">
                                        <h6 class="mb-1">الإجابات الصحيحة</h6>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-success"
                                                style="width: @(Model.CorrectAnswers * 100 / Model.TotalQuestions)%">
                                            </div>
                                        </div>
                                        <small class="mt-1">@Model.CorrectAnswers من @Model.TotalQuestions</small>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">الإجابات الخاطئة</h6>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-danger"
                                                style="width: @(Model.IncorrectAnswers * 100 / Model.TotalQuestions)%">
                                            </div>
                                        </div>
                                        <small class="mt-1">@Model.IncorrectAnswers من @Model.TotalQuestions</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- تفاصيل الإجابات -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">تفاصيل الإجابات</h5>
        </div>
        <div class="card-body">
            @if (Model.Answers != null && Model.Answers.Any())
            {
                <div class="accordion" id="answersAccordion">
                    @for (int i = 0; i < Model.Answers.Count; i++)
                    {
                        var answer = Model.Answers[i];
                        var accordionId = $"answer_{i}";
                        var headingId = $"heading_{i}";
                        var collapseId = $"collapse_{i}";
                        var isCorrect = answer.IsCorrect;
                        var statusClass = isCorrect ? "success" : "danger";
                        var statusIcon = isCorrect ? "bx-check" : "bx-x";

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@headingId">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                    <div class="d-flex justify-content-between align-items-center w-100 me-3">
                                        <span>سؤال @(i + 1)</span>
                                        <span class="badge bg-label-@statusClass">
                                            <i class="bx @statusIcon me-1"></i>
                                            @(isCorrect ? "إجابة صحيحة" : "إجابة خاطئة")
                                        </span>
                                    </div>
                                </button>
                            </h2>
                            <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId"
                                data-bs-parent="#answersAccordion">
                                <div class="accordion-body">
                                    <div class="mb-3">
                                        <h6 class="mb-2">السؤال:</h6>
                                        <div class="mb-3 border rounded p-3 bg-light">
                                            @Html.Raw(answer.QuestionText)
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <h6 class="mb-2">إجابة المتقدم:</h6>
                                            <div
                                                class="border rounded p-3 @(isCorrect ? "border-success bg-success bg-opacity-10" : "border-danger bg-danger bg-opacity-10")">
                                                @Html.Raw(answer.UserAnswer)
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h6 class="mb-2">الإجابة الصحيحة:</h6>
                                            <div class="border rounded p-3 border-success bg-success bg-opacity-10">
                                                @Html.Raw(answer.CorrectAnswer)
                                            </div>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(answer.Explanation))
                                    {
                                        <div>
                                            <h6 class="mb-2">الشرح:</h6>
                                            <div class="border rounded p-3 bg-light">
                                                @Html.Raw(answer.Explanation)
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bx bx-info-circle fs-1 mb-2"></i>
                    <p>لا توجد تفاصيل متاحة للإجابات.</p>
                </div>
            }
        </div>
    </div>
</div>