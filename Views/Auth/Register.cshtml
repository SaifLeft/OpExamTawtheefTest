@model TawtheefTest.ViewModels.CreateCandidatesVM

@{
  ViewData["Title"] = "التسجيل كمرشح";
}

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-header bg-primary text-white text-center">
        <h5 class="mb-0">تسجيل حساب جديد كمرشح</h5>
      </div>
      <div class="card-body">
        <div class="text-center mb-4">
          <i class="bi bi-person-plus-fill" style="font-size: 3rem; color: #0d6efd;"></i>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
              <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
              </div>
        }

        <div class="alert alert-info">
          <i class="bi bi-info-circle"></i> يرجى تعبئة المعلومات المطلوبة للتسجيل في نظام اختبارات المرشحين.
        </div>

        <form asp-action="Register" method="post">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          <div class="mb-3">
            <label asp-for="Name" class="form-label">الاسم الكامل</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-person"></i></span>
              <input asp-for="Name" class="form-control" placeholder="أدخل الاسم الكامل" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Phone" class="form-label">رقم الهاتف</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-phone"></i></span>
              <input asp-for="Phone" class="form-control" placeholder="أدخل رقم الهاتف" />
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
            <small class="form-text text-muted">سيتم استخدام هذا الرقم لتسجيل الدخول لاحقاً</small>
          </div>

          <div class="mb-3">
            <label asp-for="JobId" class="form-label">الوظيفة</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-briefcase"></i></span>
              <select asp-for="JobId" class="form-select" asp-items="ViewBag.Jobs">
                <option value="">-- اختر الوظيفة --</option>
              </select>
            </div>
            <span asp-validation-for="JobId" class="text-danger"></span>
          </div>

          <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-primary btn-lg">
              <i class="bi bi-check-circle"></i> تسجيل
            </button>
          </div>
        </form>
      </div>
      <div class="card-footer text-center">
        <p class="mb-0">لديك حساب بالفعل؟ <a asp-action="Login">تسجيل الدخول</a></p>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
