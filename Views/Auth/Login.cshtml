@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h5 class="mb-0">تسجيل الدخول للمرشحين</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="bi bi-person-circle" style="font-size: 3rem;"></i>
                </div>

                <form asp-action="SendOTP" method="post">
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">رقم الهاتف</label>
                        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" required>
                        <small class="form-text text-muted">أدخل رقم الهاتف المسجل للحصول على رمز التحقق</small>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> إرسال رمز التحقق
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-link">العودة للصفحة الرئيسية</a>
            </div>
        </div>
    </div>
</div>