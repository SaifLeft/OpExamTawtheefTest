@model CreateCandidatesVM
@{
    ViewData["Title"] = "إضافة مرشح جديد";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>إضافة مرشح جديد</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bx bx-arrow-left"></i> العودة للقائمة
        </a>
    </div>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">الاسم</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">رقم الهاتف</label>
                            <input asp-for="Phone" class="form-control" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="JobId" class="form-label">الوظيفة</label>
                            <select asp-for="JobId" class="form-select" asp-items="ViewBag.Jobs" required>
                                <option value="">-- اختر الوظيفة --</option>
                            </select>
                            <span asp-validation-for="JobId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bx bx-save"></i> حفظ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
