@{
  ViewData["Title"] = "إضافة إلى اختبار";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">مجموعات الأسئلة /</span> إضافة إلى اختبار
    </h4>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">إضافة مجموعة الأسئلة إلى اختبار</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="bx bx-info-circle fs-3 me-2"></i>
                            </div>
                            <div>
                                <h6 class="alert-heading mb-2">معلومات هامة</h6>
                                <p>أنت على وشك إضافة أسئلة من مجموعة الأسئلة "<strong>@ViewBag.QuestionSetName</strong>" إلى اختبار.</p>
                                <p class="mb-0">الرجاء اختيار الاختبار الذي ترغب في إضافة الأسئلة إليه.</p>
                            </div>
                        </div>
                    </div>

                    <form asp-action="AddToExam" method="post">
                        <input type="hidden" name="questionSetId" value="@ViewBag.QuestionSetId" />

                        <div class="mb-3">
                            <label class="form-label" for="examId">اختر الاختبار:</label>
                            <select class="form-select" id="examId" name="examId" required>
                                <option value="">-- اختر الاختبار --</option>
                                @foreach (var item in ViewBag.Exams)
                                {
                                              <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary" id="submitBtn" onclick="showLoading()">
                                <i class="bx bx-plus me-1"></i> إضافة الأسئلة للاختبار
                            </button>
                            <a href="@Url.Action("Details", new { id = ViewBag.QuestionSetId })" class="btn btn-outline-secondary ms-2">
                                <i class="bx bx-arrow-back me-1"></i> العودة
                            </a>
                        </div>

                        <div class="loading-overlay d-none" id="loadingOverlay">
                            <div class="text-center p-4">
                                <div class="spinner-border text-primary mb-3" role="status">
                                    <span class="visually-hidden">جاري التحميل...</span>
                                </div>
                                <p class="mb-0">جاري إضافة الأسئلة إلى الاختبار، يرجى الانتظار...</p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }
</style>

<script>
    function showLoading() {
        // التحقق من صحة النموذج
        if (document.querySelector('select[name="examId"]').value) {
            document.getElementById('loadingOverlay').classList.remove('d-none');
            document.getElementById('submitBtn').disabled = true;
        }
    }
</script>
