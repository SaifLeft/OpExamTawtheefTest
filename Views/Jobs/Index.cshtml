@using TawtheefTest.DTOs.ExamModels
@model IEnumerable<JobDTO>

@{
    ViewData["Title"] = "الوظائف";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>قائمة الوظائف</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> إضافة وظيفة جديدة
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        لا توجد وظائف متاحة. يرجى إضافة وظيفة جديدة.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                    <th>المرشحون</th>
                    <th>الاختبارات</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Code)</td>
                        <td>
                            <a asp-controller="Candidates" asp-action="ByJob" asp-route-id="@item.Id" class="badge bg-success">
                                @item.CandidateCount
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Exams" asp-action="ByJob" asp-route-id="@item.Id" class="badge bg-info">
                                @item.ExamCount
                            </a>
                        </td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i> تعديل
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> حذف
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
