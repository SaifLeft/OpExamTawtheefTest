@using OpExamTawtheefTest.DTOs.ExamModels
@using TawtheefTest.DTOs.ExamModels
@model JobDTO

@{
    ViewData["Title"] = "حذف الوظيفة";
}

<h1>حذف الوظيفة</h1>

<div class="alert alert-danger">
    <h3>هل أنت متأكد من رغبتك في حذف هذه الوظيفة؟</h3>
    <p>سيؤدي حذف الوظيفة إلى حذف جميع المرشحين والاختبارات المرتبطة بها.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                تفاصيل الوظيفة
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">اسم الوظيفة</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">رمز الوظيفة</dt>
                    <dd class="col-sm-8">@Model.Code</dd>

                    <dt class="col-sm-4">تاريخ الإنشاء</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("yyyy-MM-dd")</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> تأكيد الحذف
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-return-left"></i> العودة للقائمة
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>